{
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "paths": {
      "@site/*": ["./*"]
    }
  },
  "include": ["src/**/*", "*.js", "*.ts"],
  "exclude": ["node_modules", "build", ".docusaurus"]
}

{
  "name": "schema-editor",
  "version": "1.19.2",
  "description": "DOM元素Schema查看和编辑工具",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --project tsconfig.build.json && vite build",
    "preview": "vite preview",
    "package": "bash scripts/package.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "demo": "vite --config demo/vite.config.ts",
    "lint": "eslint src test demo packages --ext .ts,.tsx",
    "lint:fix": "eslint src test demo packages --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"test/**/*.{ts,tsx}\" \"demo/**/*.{ts,tsx}\" \"packages/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "build:sdk": "npm run build -w @schema-editor/host-sdk",
    "publish:sdk": "npm publish -w @schema-editor/host-sdk --access public"
  },
  "dependencies": {
    "@ant-design/agentic-ui": "^2.24.1",
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/language": "^6.11.3",
    "@codemirror/lint": "^6.9.2",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.8",
    "@lezer/highlight": "^1.2.3",
    "@uiw/react-codemirror": "^4.25.3",
    "antd": "^5.29.1",
    "diff": "^8.0.2",
    "jsonrepair": "^3.13.1",
    "parse-json": "^8.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.1",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.40.0",
    "@schema-editor/host-sdk": "^1.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/chrome": "^0.1.31",
    "@types/diff": "^7.0.2",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0",
    "vite": "^7.2.6",
    "wait-on": "^8.0.0"
  },
  "repository": "git@github.com:hei-f/schema-editor.git"
}

{
  "name": "schema-editor",
  "version": "1.0.8",
  "description": "DOM元素Schema查看和编辑工具",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --project tsconfig.build.json && vite build",
    "preview": "vite preview",
    "package": "bash scripts/package.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:page": "cd test && python3 -m http.server 8080",
    "test:dev": "concurrently \"npm run dev\" \"npm run test:page\""
  },
  "dependencies": {
    "@ant-design/md-editor": "^1.29.47",
    "@monaco-editor/react": "^4.6.0",
    "antd": "^5.12.0",
    "monaco-editor": "^0.45.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.21",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/styled-components": "^5.1.26",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "repository": "git@github.com:hei-f/schema-editor.git"
}

{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom", "chrome"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo.test"
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "src/**/__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}

